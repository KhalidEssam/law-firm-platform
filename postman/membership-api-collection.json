{
  "info": {
    "name": "Exoln LEX - Membership API",
    "description": "API collection for Membership management including subscriptions, tiers, quotas, coupons, and payments.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "your-jwt-token-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Membership Tiers (Public)",
      "description": "Public endpoints for viewing membership tiers",
      "item": [
        {
          "name": "List All Tiers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/memberships/tiers",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "tiers"],
              "query": [
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter by active status",
                  "disabled": true
                }
              ]
            },
            "description": "List all membership tiers (Public)"
          }
        },
        {
          "name": "Get Tier by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/memberships/tiers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "tiers", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Tier ID (numeric)"
                }
              ]
            },
            "description": "Get tier details by ID (Public)"
          }
        }
      ]
    },
    {
      "name": "Memberships",
      "description": "Membership subscription management",
      "item": [
        {
          "name": "Create Membership",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user-uuid\",\n  \"tierId\": 2,\n  \"durationInMonths\": 12,\n  \"autoRenew\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships",
              "host": ["{{baseUrl}}"],
              "path": ["memberships"]
            },
            "description": "Create a new membership subscription"
          }
        },
        {
          "name": "Get My Membership",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/memberships/me",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "me"]
            },
            "description": "Get current user's active membership"
          }
        },
        {
          "name": "Get Membership by User ID (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/memberships/user/:userId",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "user", ":userId"],
              "variable": [
                {
                  "key": "userId",
                  "value": "user-uuid",
                  "description": "User ID"
                }
              ]
            },
            "description": "Get user's active membership (System Admin, Platform)"
          }
        },
        {
          "name": "Get Membership by ID (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/memberships/:id",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                }
              ]
            },
            "description": "Get membership by ID (System Admin, Platform)"
          }
        },
        {
          "name": "Cancel Membership",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"No longer needed\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/:id",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                }
              ]
            },
            "description": "Cancel membership subscription"
          }
        },
        {
          "name": "Renew Membership",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"durationInMonths\": 12\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/:id/renew",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id", "renew"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                }
              ]
            },
            "description": "Renew membership for specified duration"
          }
        },
        {
          "name": "Toggle Auto-Renew",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"autoRenew\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/:id/auto-renew",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id", "auto-renew"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                }
              ]
            },
            "description": "Enable or disable auto-renewal"
          }
        }
      ]
    },
    {
      "name": "Tier Management (Admin)",
      "description": "Admin endpoints for managing membership tiers",
      "item": [
        {
          "name": "Create Tier",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium\",\n  \"nameAr\": \"مميز\",\n  \"description\": \"Premium tier with unlimited consultations\",\n  \"descriptionAr\": \"الباقة المميزة مع استشارات غير محدودة\",\n  \"price\": 299,\n  \"currency\": \"SAR\",\n  \"billingCycle\": \"monthly\",\n  \"quota\": {\n    \"consultations\": 10,\n    \"legalOpinions\": 5,\n    \"documentReviews\": 20\n  },\n  \"benefits\": [\n    \"Priority support\",\n    \"Dedicated account manager\",\n    \"Extended consultation hours\"\n  ],\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/tiers",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "tiers"]
            },
            "description": "Create a new membership tier (System Admin)"
          }
        },
        {
          "name": "Update Tier",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Plus\",\n  \"price\": 349,\n  \"quota\": {\n    \"consultations\": 15,\n    \"legalOpinions\": 8,\n    \"documentReviews\": 30\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/tiers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "tiers", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Tier ID (numeric)"
                }
              ]
            },
            "description": "Update membership tier (System Admin)"
          }
        },
        {
          "name": "Delete Tier",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/memberships/tiers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "tiers", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Tier ID (numeric)"
                }
              ]
            },
            "description": "Soft delete membership tier (System Admin)"
          }
        }
      ]
    },
    {
      "name": "Quotas",
      "description": "Quota management for memberships",
      "item": [
        {
          "name": "Check Quota",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/memberships/:id/quota/:resource",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id", "quota", ":resource"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                },
                {
                  "key": "resource",
                  "value": "consultations",
                  "description": "Resource type: consultations, legalOpinions, documentReviews"
                }
              ]
            },
            "description": "Check quota for a specific resource"
          }
        },
        {
          "name": "Consume Quota (Internal)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/:id/quota/:resource/consume",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id", "quota", ":resource", "consume"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                },
                {
                  "key": "resource",
                  "value": "consultations",
                  "description": "Resource type"
                }
              ]
            },
            "description": "Consume quota (Platform, System Admin - internal use)"
          }
        }
      ]
    },
    {
      "name": "Coupons",
      "description": "Coupon management for memberships",
      "item": [
        {
          "name": "Apply Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"couponCode\": \"SAVE20\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/:id/coupons/apply",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id", "coupons", "apply"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                }
              ]
            },
            "description": "Apply coupon code to membership"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "description": "Payment management for memberships",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"invoiceId\": \"invoice-uuid\",\n  \"provider\": \"stripe\",\n  \"amount\": 299,\n  \"currency\": \"SAR\",\n  \"metadata\": {\n    \"description\": \"Premium membership - 12 months\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/:id/payments",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", ":id", "payments"],
              "variable": [
                {
                  "key": "id",
                  "value": "membership-uuid",
                  "description": "Membership ID"
                }
              ]
            },
            "description": "Create payment for membership"
          }
        },
        {
          "name": "Complete Payment (Webhook)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"providerTxnId\": \"pi_1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/memberships/payments/:paymentId/complete",
              "host": ["{{baseUrl}}"],
              "path": ["memberships", "payments", ":paymentId", "complete"],
              "variable": [
                {
                  "key": "paymentId",
                  "value": "payment-uuid",
                  "description": "Payment ID"
                }
              ]
            },
            "description": "Complete payment (webhook/callback) - Platform, System Admin"
          }
        }
      ]
    }
  ]
}
