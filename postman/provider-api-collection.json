              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"specializations\": [\"corporate_law\", \"contract_law\", \"real_estate_law\"],\n  \"canAcceptRequests\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/provider-users/:id",
              "host": ["{{baseUrl}}"],
              "path": ["provider-users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "provider-user-uuid",
                  "description": "Provider user ID"
                }
              ]
            },
            "description": "Update provider user (Provider Admin)"
          }
        },
        {
          "name": "Delete Provider User",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/provider-users/:id?soft=true",
              "host": ["{{baseUrl}}"],
              "path": ["provider-users", ":id"],
              "query": [
                {
                  "key": "soft",
                  "value": "true",
                  "description": "Soft delete (true) or hard delete (false)"
                }
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "provider-user-uuid",
                  "description": "Provider user ID"
                }
              ]
            },
            "description": "Remove user from provider organization (Provider Admin)"
          }
        }
      ]
    },
