{
  "info": {
    "name": "Exoln LEX - Provider API",
    "description": "API collection for Provider management including profiles, users, services, and schedules.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "your-jwt-token-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Provider Profiles",
      "description": "Provider profile management endpoints",
      "item": [
        {
          "name": "List Provider Profiles (Public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/provider-profiles?limit=20&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["provider-profiles"],
              "query": [
                {
                  "key": "verificationStatus",
                  "value": "approved",
                  "description": "Filter by status: pending, approved, rejected, suspended",
                  "disabled": true
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter by active status",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of results to return"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Number of results to skip"
                }
              ]
            },
            "description": "List all provider profiles (Public endpoint)"
          }
        },
        {
          "name": "Get Provider Profile by ID (Public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/provider-profiles/:id",
              "host": ["{{baseUrl}}"],
              "path": ["provider-profiles", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "provider-profile-uuid",
                  "description": "Provider profile ID"
                }
              ]
            },
            "description": "Get provider profile details (Public endpoint)"
          }
        },
        {
          "name": "Create Provider Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user-uuid\",\n  \"organizationName\": \"Legal Experts LLC\",\n  \"organizationNameAr\": \"خبراء القانون المحدودة\",\n  \"licenseNumber\": \"LIC-2024-12345\",\n  \"description\": \"Leading legal services provider\",\n  \"descriptionAr\": \"مزود خدمات قانونية رائد\",\n  \"businessEmail\": \"contact@legalexperts.com\",\n  \"businessPhone\": \"+966501234567\",\n  \"website\": \"https://legalexperts.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/provider-profiles",
              "host": ["{{baseUrl}}"],
              "path": ["provider-profiles"]
            },
            "description": "Create a new provider profile (User, Provider roles)"
          }
        },
        {
          "name": "Update Provider Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated description\",\n  \"descriptionAr\": \"وصف محدث\",\n  \"businessEmail\": \"new-email@legalexperts.com\",\n  \"businessPhone\": \"+966509876543\",\n  \"website\": \"https://new-website.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/provider-profiles/:id",
              "host": ["{{baseUrl}}"],
              "path": ["provider-profiles", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "provider-profile-uuid",
                  "description": "Provider profile ID"
                }
              ]
            },
            "description": "Update provider profile (Provider role)"
          }
        },
        {
          "name": "Delete Provider Profile",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/provider-profiles/:id?soft=true",
              "host": ["{{baseUrl}}"],
              "path": ["provider-profiles", ":id"],
              "query": [
                {
                  "key": "soft",
                  "value": "true",
                  "description": "Soft delete (true) or hard delete (false)"
                }
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "provider-profile-uuid",
                  "description": "Provider profile ID"
                }
              ]
            },
            "description": "Delete provider profile (Provider role)"
          }
        },
        {
          "name": "Approve Provider Profile (Admin)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/provider-profiles/:id/approve",
              "host": ["{{baseUrl}}"],
              "path": ["provider-profiles", ":id", "approve"],
              "variable": [
                {
                  "key": "id",
                  "value": "provider-profile-uuid",
                  "description": "Provider profile ID"
                }
              ]
            },
            "description": "Approve provider profile (System Admin, Platform Admin)"
          }
        },
        {
          "name": "Reject Provider Profile (Admin)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/provider-profiles/:id/reject",
              "host": ["{{baseUrl}}"],
              "path": ["provider-profiles", ":id", "reject"],
              "variable": [
                {
                  "key": "id",
                  "value": "provider-profile-uuid",
                  "description": "Provider profile ID"
                }
              ]
            },
            "description": "Reject provider profile (System Admin, Platform Admin)"
          }
        }
      ]
    },
