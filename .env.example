# ===========================================
# EXOLN LEX - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/exoln_lex?schema=public

# ===========================================
# AUTH0 CONFIGURATION
# ===========================================
AUTH0_DOMAIN=https://your-tenant.auth0.com
AUTH0_AUDIENCE=your-api-identifier
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_MANAGEMENT_AUDIENCE=https://your-tenant.auth0.com/api/v2/

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_HOST=mail.example.com
MAIL_PORT=465
MAIL_USER=noreply@example.com
MAIL_PASS=your-email-password
MAIL_FROM_NAME=Exoln Lex

# ===========================================
# CLOUDINARY (FILE STORAGE)
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# ===========================================
# BACKUP CONFIGURATION (Optional)
# ===========================================
# Docker Compose backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_RUN_ON_STARTUP=false

# AWS S3 Backup Storage (Optional)
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=me-south-1

# Google Cloud Storage Backup (Optional, alternative to S3)
BACKUP_GCS_BUCKET=
